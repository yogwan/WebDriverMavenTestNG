<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Functional Suit">

<listeners> 
<listener class-name="customListeners.Listeners"></listener>
<listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
</listeners>

	<test name="Login Test">
		<classes>
			<class name="listenerTests.LoginTestCase" />
		</classes>
	</test> <!-- Test -->

	<test name="Soft Assertion Test">
		<classes>
			<class name="listenerTests.SoftAssertions" />
		</classes>
	</test> <!-- Test -->

	<test name="Dependencies Test">
		<classes>
			<class name="listenerTests.TestDependencies" />
		</classes>
	</test> <!-- Test -->

	<test name="Validations Test">
		<classes>
			<class name="listenerTests.Validations" />
		</classes>
	</test> <!-- Test -->

	<test name="Failure Test">
		<classes>
			<class name="listenerTests.TestFailure" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->
